{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "ES6",
      "ES2020",
      "ES2021",
      "ES2022",
      "es2015.promise"
    ],
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": ".",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types/",
      "@types/"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}